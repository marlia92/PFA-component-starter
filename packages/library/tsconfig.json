{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "@skele/components/*": ["../shared/components/*"],
      "@skele/styles/*": ["../shared/styles/*"],
      "@skele/plugins/*": ["../shared/plugins/*"],
      "@skele/shared/*": ["../shared/*"]
    },

    "types": ["astro/astro-jsx"]
  },

  "include": [".astro/types.d.ts", "**/*", "../shared"],

  "exclude": ["dist"]
}
