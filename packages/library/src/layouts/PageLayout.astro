---
import Page from "@skele/shared/page/page.astro";
import LibraryLayout from "./LibraryLayout.astro";

const { frontmatter, title, content_blocks } = Astro.props;

const pageTitle = title || frontmatter?.title || "Skele Library";
const contentBlocks = content_blocks || frontmatter?.content_blocks || [];
---

<LibraryLayout title={pageTitle}>
  <Page bookshop:live contentBlocks={contentBlocks} />
  <slot />
</LibraryLayout>
