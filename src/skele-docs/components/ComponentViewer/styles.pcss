.component-viewer {
  border: 1px solid var(--border-subtle-borderColor);
  border-radius: var(--radius-xs);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

.previews {
  height: 100%;
  overflow-y: auto;
}

.preview {
  display: none;
}

.preview.active {
  display: block;
  overflow-y: auto;
}

.code {
  display: none;
  height: 100%;
}

.viewer-size {
  &-sm {
    height: 10rem;
  }

  &-md {
    height: 15rem;
  }

  &-lg {
    height: 20rem;
  }
}

.controls {
  align-items: center;
  background: var(--color-faint-backgroundColor);
  border-top: 1px solid var(--border-subtle-borderColor);
  display: flex;
  justify-content: space-between;
  padding: var(--space-sm);

  > * {
    line-height: 0;
  }
}
