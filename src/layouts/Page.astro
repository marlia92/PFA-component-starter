---
import Components from "@components/utils/renderBlock.astro";
import Layout from "@layouts/BaseLayout.astro";

type Props = {
  frontmatter: {
    title: string;
    description?: string;
    keywords?: string[];
    image?: string;
    canonical?: string;
    pageBlocks: any[];
  };
};

const props = Astro.props.frontmatter;
---

<Layout
  title={props.title}
  description={props.description}
  keywords={props.keywords}
  image={props.image}
  canonical={props.canonical}
>
  <Components
    data-editable="array"
    data-prop="pageBlocks"
    data-id-key="_bookshop_name"
    contentBlocks={props.pageBlocks}
  />
</Layout>
