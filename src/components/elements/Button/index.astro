---
import clsx from "clsx";
import Icon from "../Icon/index.astro";
import { buttonSchema } from "./schema";

const { label, link, iconName, iconPosition, hideText, variant, size, ...restProps } =
  buttonSchema.parse(Astro.props);

// Filter out props that start with underscore
const htmlAttributes = Object.fromEntries(
  Object.entries(restProps).filter(([key]) => !key.startsWith("_"))
);

const classNames = clsx(
  "button",
  `size-${size}`,
  `variant-${variant}`,
  hideText && "icon-only",
  iconPosition === "after" && "icon-after",
  htmlAttributes.class as string | undefined
);

const Tag = link ? "a" : "button";
const elementProps = {
  ...htmlAttributes,
  ...(link ? { href: link, role: "button" } : { type: "button" }),
};
---

<Tag {...elementProps as any} class:list={classNames}>
  {iconName && <Icon name={iconName} buttonIcon size="none" class="button-icon" />}
  {label && <span class:list={hideText ? "sr-only" : "label"}>{label}</span>}
</Tag>

<style>
  @import "./theme.pcss";

  .button {
    align-items: center;
    background-color: var(--button-ghost-bg);
    border: 1px solid var(--button-ghost-border);
    border-radius: var(--radius-xs);
    color: var(--button-ghost-color);
    display: inline-flex;
    font-weight: var(--font-weight-medium);
    gap: 0.15em;
    justify-content: center;
    min-height: 10px;
    min-width: 10px;
    padding-block: var(--space-em-sm);
    padding-inline: var(--space-em-sm);
    text-align: center;
    text-decoration: none;
    transition-duration: var(--flinch);
    transition-property: background-color, color, border-color;
    transition-timing-function: ease-in-out;
    vertical-align: middle;

    &:hover,
    &:focus {
      background-color: var(--button-ghost-hover-backgroundColor);
      border-color: var(--button-ghost-hover-borderColor);
      color: var(--button-ghost-hover-fontColor);
      cursor: pointer;
      outline-color: var(--color-focus-ring);
      outline-offset: 4px;
    }

    &.icon-only {
      padding: var(--space-em-xs);
    }

    &.icon-after {
      flex-direction: row-reverse;
    }
  }

  .variant {
    &-primary {
      background-color: var(--button-primary-bg);
      border-color: var(--button-primary-border);
      color: var(--button-primary-text);

      &:hover,
      &:focus {
        background-color: var(--button-primary-hover-bg);
        border-color: var(--button-primary-hover-border);
        color: var(--button-primary-hover-text);
      }
    }

    &-secondary {
      background-color: var(--button-secondary-bg);
      border-color: var(--button-secondary-border);
      color: var(--button-secondary-text);

      &:hover,
      &:focus {
        background-color: var(--button-secondary-hover-bg);
        border-color: var(--button-secondary-hover-border);
        color: var(--button-secondary-hover-text);
      }
    }

    &-tertiary {
      background-color: var(--button-tertiary-bg);
      border-color: var(--button-tertiary-border);
      color: var(--button-tertiary-text);

      &:hover,
      &:focus {
        background-color: var(--button-tertiary-hover-bg);
        border-color: var(--button-tertiary-hover-border);
        color: var(--button-tertiary-hover-text);
      }
    }

    &-ghost {
      background-color: var(--button-ghost-bg);
      border-color: var(--button-ghost-border);
      color: var(--button-ghost-text);

      &:hover,
      &:focus {
        background-color: var(--button-ghost-hover-bg);
        border-color: var(--button-ghost-hover-border);
        color: var(--button-ghost-hover-text);
      }
    }
  }

  .size {
    &-sm {
      font-size: var(--font-size-xs);
    }

    &-md {
      font-size: var(--font-size-md);
    }

    &-lg {
      font-size: var(--font-size-xl);
    }
  }
</style>
