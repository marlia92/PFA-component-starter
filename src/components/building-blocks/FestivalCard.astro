---
// Destructure the individual props being passed from the page
const { 
    title, 
    summary, 
    region, 
    image, 
    link,   // The calculated link for the card
    external_link 
} = Astro.props;
---

<a href={link} class="festival-card">
    <div class="festival-card-content">
        <h2>{title}</h2>
        <p class="summary">{summary}</p>
        <p class="region-tag">{region}</p> 

        {image && <img src={image} alt={`Image for ${title}`} class="card-image" />}

        {external_link && <p class="external-link"><a href={external_link} target="_blank">Learn More (External)</a></p>}
    </div>
</a>
