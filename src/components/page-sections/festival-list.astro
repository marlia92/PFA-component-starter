---
import { getCollection } from "astro:content";
import FestivalCard from "@components/building-blocks/FestivalCard.astro";

const festivals = await getCollection("festivals");
---

<section>
  <div class="container">
    {festivals.map((festival) => (
    <a href={`/festivals/${festival.slug}/`}>
      <FestivalCard festival={festival.data} />
    </a>
    ))}
  </div>
</section>
