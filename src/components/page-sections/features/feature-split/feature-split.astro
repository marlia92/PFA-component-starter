---
import CustomSection from "@builders/custom-section/custom-section.astro";

const {
  eyebrow = "",
  heading = "",
  subtext = "",
  buttonSections = [],
  imageSource = "",
  imageAlt = "",
  imageAspectRatio = "portrait",
  imageRounded = true,
  reverse = false,
  colorScheme,
  backgroundColor,
  class: className,
} = Astro.props;

const hasImage = Boolean(imageSource);
const minSplitWidth = 720;
const featureSplitId = `feature-split-${crypto.randomUUID()}`;
---

<CustomSection
  class:list={["feature-split", className]}
  maxContentWidth="2xl"
  paddingHorizontal="lg"
  paddingVertical="lg"
  colorScheme={colorScheme}
  backgroundColor={backgroundColor}
  data-feature-split-id={featureSplitId}
/>

{
  imageAspectRatio == "portrait" && (
    <style
      is:inline
      set:html={`
        @container feature-split-layout (min-width: ${minSplitWidth}px) {
        .feature-split-image.image.rounded.reverse {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }
        .feature-split-image.image.rounded:not(.reverse) {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
        }
    `}
    />
  )
}

<style lang="pcss">

  .feature-split-layout {
    container-type: inline-size;
    container-name: feature-split-layout;
  }

</style>
